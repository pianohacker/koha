    [% END %]
    </select>
    </li>

    <li>
    <label for="budget_permission">Restrict access to: </label>
    <select name="budget_permission" id="budget_permission">
        [% IF ( budget_perm_0 ) %]
            <option value="0" selected="selected">
        [% ELSE %]
            <option value="0">
        [% END %]
            None
        </option>

        [% IF ( budget_perm_1 ) %]
            <option value="1" selected="selected">
        [% ELSE %]
            <option value="1">
        [% END %]
            Owner
        </option>

        [% IF ( budget_perm_3) %]
            <option value="3" selected="selected">
        [% ELSE %]
            <option value="3">
        [% END %]
